@using EntityLayer.Concrete
@model List<Satis>
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<center><h2>Satış Listesi</h2></center>
<br />
<form method="post" action="/Satis/index">
    <table class="table table-hover">
        <tr>
            <th>Satış ID</th>
            <th>MÜşteri Ad</th>
            <th>MÜşteri Soyad</th>
            <th>Ürün ID</th>
            <th>Ürün Ad</th> 
            <th>Tarih</th>
            <th></th>
            <th></th>

        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>@item.SatisID</td>
                @*<td>@item.MusteriAd</td>
                <td>@item.MusteriSoyad</td>*@
                <td>@item.UrunID</td>
                <td>@item.Urun.UrunAd</td>
                <td>@item.Urun.Fiyat</td>
                <td>@item.Tarih</td>
              

                <td><a href="/Satis/DeleteSatis/@item.SatisID" class="btn btn-danger">Satış sil</a></td>
                <td><a href="/Satis/EditSatis/@item.SatisID" class="btn btn-success">Satış güncelle</a></td>


            </tr>
        }
    </table>
</form>
<br />
<a href="/Satis/AddSatis" style="margin-left:20px;" class="btn btn-info">Yeni Satış</a>
